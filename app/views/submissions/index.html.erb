  <script src="app/assets/javascripts/jquery.masonry.min.js"></script>

  
  <%= javascript_include_tag("jquery.masonry.min.js") %>
  <script>
  $(function(){
    $('#container').masonry({
      // options
      itemSelector : '#contents',
      columnWidth : 250px;
    });
  });

  </script>



<!--MASONRY IMAGE LOAD FIX-->
<script>
  $(function(){

    var $container = $('#container');
  
    $container.imagesLoaded( function(){
      $container.masonry({
        itemSelector : '#contents'
      });
    });
  
  });
</script>


